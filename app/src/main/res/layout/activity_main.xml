<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thiago.myapplication.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBodyPrimary">

    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="@string/error_message"
        android:visibility="invisible"/>



    <RelativeLayout
        android:id="@+id/arrows_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary">


        <ImageView
            android:id="@+id/arrow_previous"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/ic_keyboard_arrow_left_white_24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:onClick="showPreviousPage"/>
        <TextView
            android:layout_toEndOf="@id/arrow_previous"
            android:layout_centerVertical="true"
            android:text="@string/navigation_arrow_previous"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/number_of_page"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/grey"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>


        <ImageView
            android:id="@+id/arrow_next"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:onClick="showNextPage"/>
        <TextView
            android:layout_toStartOf="@id/arrow_next"
            android:text="@string/navigation_arrow_next"
            android:layout_centerVertical="true"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</merge>

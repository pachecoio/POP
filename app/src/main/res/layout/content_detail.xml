<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.thiago.myapplication.DetailActivity"
    tools:showIn="@layout/activity_detail"
    android:background="@color/colorBodyPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/detail_background"/>


        <TextView
            android:id="@+id/original_title_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="@string/original_title_label"
            android:textSize="@dimen/detail_title_size"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:paddingTop="18dp"
            android:paddingStart="18dp" />

        <TextView
            android:id="@+id/original_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_content_size"
            android:layout_toEndOf="@id/original_title_title"
            android:textAlignment="inherit"
            android:textColor="#FFFFFF"
            android:paddingTop="20dp"
            android:paddingEnd="18dp"/>

        <TextView
            android:id="@+id/overview_title"
            android:text="@string/synopsis_label"
            android:textSize="@dimen/detail_title_size"
            android:layout_below="@id/original_title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:paddingTop="18dp"
            android:paddingStart="18dp" />

        <TextView
            android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_content_size"
            android:layout_toEndOf="@id/overview_title"
            android:textAlignment="inherit"
            android:textColor="#FFFFFF"
            android:layout_below="@id/original_title_title"
            android:paddingEnd="16dp"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/user_rating_title"
            android:text="@string/user_rating_label"
            android:textSize="@dimen/detail_title_size"
            android:layout_below="@id/overview"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:paddingTop="18dp"
            android:paddingStart="18dp" />

        <TextView
            android:id="@+id/user_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_content_size"
            android:layout_toEndOf="@id/user_rating_title"
            android:textAlignment="inherit"
            android:textColor="#FFFFFF"
            android:layout_below="@id/overview"
            android:paddingEnd="16dp"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/release_date_title"
            android:text="@string/release_date_label"
            android:textSize="@dimen/detail_title_size"
            android:layout_below="@id/user_rating"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:paddingTop="18dp"
            android:paddingStart="18dp" />

        <TextView
            android:id="@+id/release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detail_content_size"
            android:layout_toEndOf="@id/release_date_title"
            android:textAlignment="inherit"
            android:textColor="#FFFFFF"
            android:layout_below="@id/user_rating"
            android:paddingEnd="16dp"
            android:paddingTop="20dp"/>

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
